package miniproject;

import java.sql.*;

public class mod4 {
    // Update your MySQL credentials
    static final String URL = "jdbc:mysql://localhost:3306/teamtask";
    static final String USER = "root";
    static final String PASSWORD = "your_password_here"; // üî∏ Replace this!

    // Create connection and sample table
    public static void dbConnect() {
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection con = DriverManager.getConnection(URL, USER, PASSWORD);
            Statement st = con.createStatement();

            st.executeUpdate("CREATE TABLE IF NOT EXISTS tasks ("
                    + "id INT AUTO_INCREMENT PRIMARY KEY, "
                    + "title VARCHAR(100), "
                    + "description VARCHAR(255))");

            System.out.println("‚úÖ Connected to Database Successfully!");
            con.close();
        } catch (Exception e) {
            System.out.println("‚ùå DB Error: " + e.getMessage());
        }
    }

    // Insert new task
    public static void insertTask(String title, String description) {
        try (Connection con = DriverManager.getConnection(URL, USER, PASSWORD)) {
            PreparedStatement ps = con.prepareStatement("INSERT INTO tasks(title, description) VALUES(?, ?)");
            ps.setString(1, title);
            ps.setString(2, description);
            ps.executeUpdate();
            System.out.println("‚úÖ Task inserted: " + title);
        } catch (Exception e) {
            System.out.println("‚ùå Error inserting task: " + e.getMessage());
        }
    }

    // Read tasks
    public static void readTasks() {
        try (Connection con = DriverManager.getConnection(URL, USER, PASSWORD)) {
            Statement st = con.createStatement();
            ResultSet rs = st.executeQuery("SELECT * FROM tasks");
            System.out.println("\nüìã Tasks from Database:");
            while (rs.next()) {
                System.out.println(rs.getInt("id") + ". " + rs.getString("title") + " - " + rs.getString("description"));
            }
        } catch (Exception e) {
            System.out.println("‚ùå Error reading tasks: " + e.getMessage());
        }
    }

    public static void main(String[] args) {
        dbConnect();
        insertTask("Setup GUI", "Implement Swing interface");
        readTasks();
    }
}
